<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import Controller.Lab1Controller?>

<StackPane fx:id="stackPane" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Lab2Controller">

    <!-- Вторая страница -->
    <VBox fx:id="page2" visible="true">

        <VBox alignment="top_center"> 
        <Label text="Лаб 2: Аннотации к методам" style="-fx-font-family: 'Arial'; -fx-font-size: 27;">
            <VBox.margin>
                <Insets top="20"/>
            </VBox.margin>
        </Label>
        </VBox>

        <HBox spacing="10" alignment="CENTER">
            <Label text="Введите парметр для метода (int):" style="-fx-font-family: 'Arial'; -fx-font-size: 19;">
                <HBox.margin>
                    <Insets top="50"/> 
                </HBox.margin>
            </Label>
            <TextField fx:id="text_field1_lab2" prefWidth="120">
                <HBox.margin>
                    <Insets top="50" left="95"/> 
                </HBox.margin>
            </TextField>
        </HBox>

        <HBox spacing="10" alignment="CENTER">
            <Label text="Введите парметр для метода (double):" style="-fx-font-family: 'Arial'; -fx-font-size: 19;">
                <HBox.margin>
                    <Insets top="50"/> 
                </HBox.margin>
            </Label>
            <TextField fx:id="text_field2_lab2" prefWidth="120">
                <HBox.margin>
                    <Insets top="50" left="95"/> 
                </HBox.margin>
            </TextField>
        </HBox>

        <HBox spacing="10" alignment="CENTER">
            <Label text="Введите парметр для метода (String):" style="-fx-font-family: 'Arial'; -fx-font-size: 19;">
                <HBox.margin>
                    <Insets top="50"/> 
                </HBox.margin>
            </Label>
            <TextField fx:id="text_field3_lab2" prefWidth="120">
                <HBox.margin>
                    <Insets top="50" left="95"/> 
                </HBox.margin>
            </TextField>
        </HBox>

        <HBox spacing="10" alignment="CENTER">
            <TextArea fx:id="text_area1_lab2" prefWidth="462" prefHeight="80" editable="false">
                <HBox.margin>
                    <Insets top="50"/> 
                </HBox.margin>
            </TextArea>
        </HBox>

        <VBox alignment="top_center"> 
        <Button fx:id="enter_btn1_lab2" text="Выполнить" style="-fx-pref-width: 100; -fx-pref-height: 30;">
            <VBox.margin>
                <Insets top="20"/>
            </VBox.margin>
        </Button>
        </VBox>

        <VBox alignment="top_center"> 
        <Button fx:id="back_btn" text="Назад" style="-fx-pref-width: 100; -fx-pref-height: 30;">
            <VBox.margin>
                <Insets top="50"/>
            </VBox.margin>
        </Button>
        </VBox>

    </VBox>

</StackPane>
