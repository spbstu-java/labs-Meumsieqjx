<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import Controller.Lab1Controller?>

<StackPane fx:id="stackPane" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Lab1Controller">

    <!-- Первая страница -->
    <VBox fx:id="page1" visible="true">
        <VBox alignment="top_center"> 
        <Label text="Лаб 1: Перемещение героя" style="-fx-font-family: 'Arial'; -fx-font-size: 27;">
            <VBox.margin>
                <Insets top="20"/>
            </VBox.margin>
        </Label>
        </VBox>


        <HBox spacing="10" alignment="CENTER">
            <Label text="Выберите способ перемещения:" style="-fx-font-family: 'Arial'; -fx-font-size: 19;">
                <HBox.margin>
                    <Insets top="50"/> 
                </HBox.margin>
            </Label>
            <ComboBox fx:id="combo_box1_lab1" prefWidth="120">
                <HBox.margin>
                    <Insets top="50" left="40"/> 
                </HBox.margin>
            </ComboBox>
        </HBox>

        <HBox spacing="10" alignment="CENTER">
            <Label text="Укажите начальную точку:" style="-fx-font-family: 'Arial'; -fx-font-size: 19;">
                <HBox.margin>
                    <Insets top="50"/> 
                </HBox.margin>
            </Label>
            <TextField fx:id="text_field1_lab1" prefWidth="120">
                <HBox.margin>
                    <Insets top="50" left="95"/> 
                </HBox.margin>
            </TextField>
        </HBox>

        <HBox spacing="10" alignment="CENTER">
            <Label text="Укажите конечную точку:" style="-fx-font-family: 'Arial'; -fx-font-size: 19;">
                <HBox.margin>
                    <Insets top="50"/> 
                </HBox.margin>
            </Label>
            <TextField fx:id="text_field2_lab1" prefWidth="120">
                <HBox.margin>
                    <Insets top="50" left="108"/> 
                </HBox.margin>
            </TextField>
        </HBox>

        <HBox spacing="10" alignment="CENTER">
            <TextArea fx:id="text_area1_lab1" prefWidth="462" prefHeight="80" editable="false">
                <HBox.margin>
                    <Insets top="50"/> 
                </HBox.margin>
            </TextArea>
        </HBox>

        <VBox alignment="top_center"> 
        <Button fx:id="enter_btn1_lab1" text="Выполнить" style="-fx-pref-width: 100; -fx-pref-height: 30;">
            <VBox.margin>
                <Insets top="20"/>
            </VBox.margin>
        </Button>
        </VBox>

        <VBox alignment="top_center"> 
        <Button fx:id="back_btn" text="Назад" style="-fx-pref-width: 100; -fx-pref-height: 30;">
            <VBox.margin>
                <Insets top="50"/>
            </VBox.margin>
        </Button>
        </VBox>
    </VBox>

</StackPane>
